<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chronomètre : 0:00:000"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/text_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance initiale"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/text_chronometer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/lap_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tours restants : 0"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/text_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance : 0m"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/lap_count_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/shoot_distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance de tir : 0m"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/distance_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <Button
        android:id="@+id/button_next_phase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Commencer le tir"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/button_finish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="32dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/button_finish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terminer l'entraînement"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="32dp"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>